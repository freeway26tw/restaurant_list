<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" list="searchWord" aria-describedby="search-button">
          <datalist id="searchWord">
            {{#each restaurants}}
            <option value="{{this.name}}">{{this.name}}</option>
            {{/each}}
          </datalist>
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>

          <select class="form-select form-select-sm" aria-label="select sort" role="button" name="sort"
            onchange="this.form.submit()">
            <option {{selected sortSelected.default}} value="default">Sort by</option>
            <option {{selected sortSelected.AtoZ}} value="AtoZ">A → Z</option>
            <option {{selected sortSelected.ZtoA}} value="ZtoA">Z → A</option>
            <option {{selected sortSelected.category}} value="category">類別</option>
            <option {{selected sortSelected.location}} value="location">地區</option>
          </select>
      </form>
    </div>

  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div class="card mb-3">
          <a href="/restaurants/{{this.id}}"><img class="card-img-top" src="{{this.image}}" alt="{{this.name}}"></a>
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i>
              <a href="/explore/{{this.category}}">{{this.category}}</a>
              <a href="/restaurants/{{this.id}}">Detail</a>
              <a href="/restaurants/{{this.id}}/edit">Edit</a>
              <form onClick="return confirm('Are you sure you want to delete this item?')"
                action=" ./restaurants/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit">delete</button>
              </form>
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>